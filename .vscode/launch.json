    "version": "0.2.0",
    "configurations": [
        {
            "name": "CLI - test",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "args": ["fit", "--config", "config/base.yaml", "--config", "config/dev.yaml"],
            "justMyCode": false
        },
        {
            "name": "Python File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${PYTHONPATH}"
            }
        }
    ]
}